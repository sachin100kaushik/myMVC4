@model BusinessLayer.Models.Employee

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <title>Employee Context</title>
</head>
<body>
    <h2>Employee's Detail</h2>
    <div style="font-family:arial";>
        <table >
                         <tr>
                    <td>
                       <b>Employee Id:</b> 
                    </td>
                    <td>
                        @Model.EmployeeId
                    </td>
                </tr>
             <tr>
                    <td>
                       <b>Name:</b> 
                    </td>
                    <td>
                       @Model.Name
                    </td>
             </tr>
             <tr>
                    <td>
                      <b>Gender:</b> 
                    </td>
                    <td>
                       @Model.Gender
                    </td>
             </tr>
             <tr>
                    <td>
                       <b>City:</b> 
                    </td>
                    <td>
                        @Model.City
                    </td>
             </tr>
        </table>
        @Html.ActionLink("Back to list of the employees", "Index", new {departmentId=@Model.DepId})
    </div>
</body>
</html>
